<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Stylists</title>
    </head>
    <body>
        <div class="container text-center">
            <h1>HairSQL Barber Shop</h1>
        </div>
        <div class="container">
            <h1>Clients Assigned to {{stylist.getStylistName}}</h1>
            {% if matchingClients is not empty %}
                <ul>
                    {% for client in matchingClients %}
                    <li>{{ client.getClientName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h2>Add a Client</h2>
            <form action="/clients" method="post">
                <label for="new_client_name">New Client Name</label>
                <input id="stylist_id" name="stylist_id" type="hidden" value="{{stylist.getId()}}">
                <input id="new_client_name" name="new_client_name" type="text" required class="form-control"><br>
                <button class="btn btn-success" type="submit">Add Client</button><br>
            </form><hr>
            <a href="/" role="button" class="btn btn-info">Back to Main Page</a>
        </div>
    </body>
</html>
